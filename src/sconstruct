# Search these directories for libraries to include.
# '#' indicates the directory that scons is executed in.
include_path =       \
    '#/common:'      \
   +'#/console:'     \
   +'#/controller:'  \
   +'#/gui:'         \
   +'#/main:'        \
   +'#/message:'     \
   +'#/messageRouter'

# List of Objects to Compile
objects = [
'./console/Parser.cpp',
'./console/Console.cpp',
'./console/MessageFactory.cpp',
'./messageRouter/MessageRouter.cpp',
'./common/SystemComponent.cpp',
'./common/Mailbox.cpp',
'./common/AsgardThread.cpp',
'./controller/QueryGenerator.cpp',
'./controller/GrassTile.cpp',
'./controller/RowSet.cpp',
'./controller/GameEngine.cpp',
'./controller/RectHardpoint.cpp',
'./controller/MapObjectFactory.cpp',
'./controller/StaticMapObject.cpp',
'./controller/Coordinate.cpp',
'./controller/MapObject.cpp',
'./controller/NonPlayerCharacter.cpp',
'./controller/WaterTile.cpp',
'./controller/Item.cpp',
'./controller/Database.cpp',
'./controller/CircHardpoint.cpp',
'./controller/Container.cpp',
'./controller/DesertTile.cpp',
'./main/main.cpp'
]

# Main Target: Build the Full Executable
# Notice the high level dependencies list in LIBS
env = Environment(CPPPATH=include_path)
env.Program('asgard', objects, LIBS=['boost_thread-mt','boost_signals-mt','sqlite3'])
